@model IEnumerable<Nursing_Student_Vetting.Models.Class>

@{
ViewData["Title"] = "Class List";
}

<h1>Class List</h1>

<p>
    <a asp-action="Update">Create New Student</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRequired)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var @class in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => class.ClassID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => class.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => class.CreditHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => class.IsRequired)
        </td>
        <td>
            <a asp-action="Update" asp-route-id="@class.ClassID">Edit</a> |
            <a asp-action="Details" asp-route-id="@class.ClassID">Details</a> |
            <a asp-action="Delete" asp-route-id="@class.ClassID">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>

@{
string userMessage = TempData?["UserMessage"]?.ToString() ?? "";
}
@if (userMessage != "")
{
<div class="text-success">@userMessage</div>
}
